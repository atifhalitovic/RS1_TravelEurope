@model TravelEurope.Areas.RadnikPanel.ViewModels.RadnikProfilVM
@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "TravelEurope";
    Layout = "RadnikPanelLayout";
}
<head>
    <environment include="Production">
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    </environment>
</head>
<body>
    <div class="container emp-profile">
        <form>
            <div class="row">
                <div class="col-md-6">
                    <div class="profile-head">
                        <h4>Ovdje možete dobiti uvid u vaše podatke.</h4>
                        <p></p>
                        <h6>Username: @Model.Radnik.ApplicationUser.Ime @Model.Radnik.ApplicationUser.Prezime</h6>
                        @if (User.IsInRole("Radnik"))
                        {
                        <h6>
                            Role: Radnik
                        </h6>
                        }
                        else
                        {
                            <h6>Role: Administrator</h6>
                        }
                        <p></p>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Osnovno</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Više</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="tab-content profile-tab" id="myTabContent">
                        <p></p>
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Ime i prezime</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Radnik.ApplicationUser.Ime @Model.Radnik.ApplicationUser.Prezime</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>JMBG</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Radnik.ApplicationUser.JMBG</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">

                                    <label>Datum rođenja</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Radnik.ApplicationUser.DatumRodjenja.ToShortDateString()</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Telefon</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Radnik.ApplicationUser.Telefon</p>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Adresa</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Radnik.ApplicationUser.Adresa</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label asp-for="@Model.Radnik.ApplicationUser.Grad">Grad</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Grad</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label asp-for="@Model.Radnik.Pozicija">Pozicija</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Radnik.Pozicija</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label asp-for="@Model.Radnik.GodineStaza">Godine staza</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Radnik.GodineStaza</p><p></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
